<Page
    x:Class="MyApp.MyItemViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            
            <StackPanel Spacing="10" Margin="5,5,5,5">
                <Grid Padding="24">

                    <Grid Margin="0,0,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Text="Title" FontWeight="Bold" VerticalAlignment="Center" Padding="8,0"/>
                        <TextBlock Grid.Column="1" Text="Subtitle" FontWeight="Bold" VerticalAlignment="Center" Padding="8,0"/>
                        <TextBlock Grid.Column="2" Text="Description" FontWeight="Bold" VerticalAlignment="Center" Padding="8,0"/>
                    </Grid>

                    <GridView x:Name="ItemGridView" ItemsSource="{x:Bind Items}" Margin="0,36,0,0" 

                        IsMultiSelectCheckBoxEnabled="True"
                        SelectionMode="Multiple"
                        SelectionChanged="ItemGridView_SelectionChanged"

                        IsItemClickEnabled="True"
                        ItemClick="ItemGridView_ItemClick"
                        >
<!--
                        IsItemClickEnabled="True"
                        ItemClick="ItemGridView_ItemClick"
-->
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="local:MyItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="400"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind Title}" VerticalAlignment="Center" Padding="8,0"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind Subtitle}" VerticalAlignment="Center" Padding="8,0"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind Description}" VerticalAlignment="Center" Padding="8,0"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>

                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>


                    </GridView>

                </Grid>

            </StackPanel>
            
        </ScrollViewer>
    </Grid>
    
</Page>
